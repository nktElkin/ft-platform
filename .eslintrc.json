{
  "plugins": ["@typescript-eslint"],
  "extends": [
    "next",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    }
  ],
  "rules": {
    "no-console": "off", // Disable console statements
    "@typescript-eslint/no-explicit-any": "off", // Disable the use of 'any' type
    "@typescript-eslint/no-unused-vars": "off", // Disable unused variables rule
    "@next/next/no-assign-module-variable": "off", // Disable no-assign-module-variable rule
    "@next/next/no-img-element": "off", // Disable no-img-element rule
    "jsx-a11y/alt-text": "off", // Disable alt-text rule
    "react/no-unescaped-entities": "off", // Disable no-unescaped-entities rule
    "react-hooks/exhaustive-deps": "off", // Disable exhaustive-deps rule
    "jsx-a11y/role-supports-aria-props": "off", // Disable role-supports-aria-props rule
    "@typescript-eslint/no-non-null-asserted-optional-chain": "off", // Disable no-non-null-asserted-optional-chain rule
    "react/jsx-key": "off", // Disable jsx-key rule
    "react/no-async-client-component": "off", // Disable no-async-client-component rule
    "no-var": "off" // Disable no-var rule
  }
}

